# exec --no-startup-id thunar 
# for_window [class="Thunar"] move workspace $ws9

exec --no-startup-id i4-msg 'workspace 2; exec kitty -e tmux new -s new'
exec --no-startup-id i3-msg 'workspace 1; exec pcmanfm'
exec --no-startup-id i3-msg 'workspace 9; exec /usr/bin/kitty -e htop'

# arbitrary command
for_window [class="ksnip"] floating enable
for_window [class="Gpick"] floating enable
for_window [class="xdman-Main"] floating enable

