cd ~/Desktop/learning/c_lang
tmux new -s 'c_lang' -n normal -d
tmux split-window -v -p 30 -t 'c_lang'
tmux split-window -h -p 70 -t 'c_lang'

tmux select-pane -t 'c_lang':1.1
tmux send-keys -t 'c_lang' 'nf' C-m
tmux select-pane -t 'c_lang':1.2
tmux clock-mode
tmux select-pane -t 'c_lang':1.3

tmux new-window -t 'c_lang' -n 'Editor'
tmux new-window -t 'c_lang' -n 'Compiler'
tmux new-window -t 'c_lang' -n 'Executor'

tmux select-window -t 'c_lang':2
tmux send-keys -t 'c_lang' 'lss' C-m
tmux send-keys -t 'c_lang' 'clear' C-m
tmux send-keys -t 'c_lang' 'nvim main.c' C-m

tmux select-window -t 'c_lang':3
tmux send-keys -t 'c_lang' 'clear' C-m
tmux send-keys -t 'c_lang' 'lss' C-m

tmux select-window -t 'c_lang':4
tmux send-keys -t 'c_lang' 'clear' C-m
tmux send-keys -t 'c_lang' 'lss' C-m

tmux select-window -t 'c_lang':2
